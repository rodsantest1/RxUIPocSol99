<rxui:ReactiveWindow x:Class="WpfApp1.MainWindow"
        x:TypeArguments="local:AppViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rxui="http://reactiveui.net"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="375*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MyMessage" Grid.RowSpan="2" Grid.Row="0" />
        <rxui:ViewModelViewHost 
       x:Name="host"
       HorizontalContentAlignment="Stretch"
       VerticalContentAlignment="Stretch" Grid.RowSpan="2" Grid.Row="1"/>
    </Grid>
</rxui:ReactiveWindow>
